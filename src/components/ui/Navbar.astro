---
import { Astronav } from "astro-navbar";
import { Image } from "astro:assets"; 
import Rattan from "../../assets/Rattan.svg";
import Rat from "../../assets/Rat.svg";

const menuitems = [
  { href: '/#process', label: 'Menu' },
  { href: '/#cases', label: 'Water Taxi' },
  { href: '/#about', label: 'Snorkling' },
];
---

<nav class="w-full fixed top-0 left-0 z-50 text-black">
  <header class="relative flex flex-col items-center py-2 px-4 md:px-10">
    <Astronav>
      <!-- ✅ Zentriertes Logo -->
      <div class="absolute left-1 top-1 sm:static sm:translate-x-0 z-10">
        <a href="/" class="flex items-center space-x-2">
          <img src="/Logo.svg" alt="Awatif Cafe" class="h-8 w-auto" />
        </a>
      </div>

      <!-- ✅ Menü-Icon rechts -->
      <div class="ml-auto block lg:hidden">
        <div id="menu-icon" class="w-6 h-6 text-[#C084FC] cursor-pointer">
          <svg
            id="open-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg
            id="close-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            class="w-6 h-6 hidden"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
      </div>

      <!-- ✅ Navigation sichtbar bei Desktop & aufklappbar Mobil -->
      <nav class="w-full mt-2 lg:mt-0">
        <div id="menu-bg" class="hidden absolute inset-0 z-[-1]">
          <Image src={Rat} alt="Rattan Background" class="w-full h-[200px] object-cover" />
        </div>
        <ul
          id="menu-items"
          class="hidden flex-col lg:flex lg:flex-row lg:space-x-10 font-medium text-center lg:text-left p-2 lg:p-0 text-[#C9FFE6] lg:bg-transparent lg:text-[#C084FC]"
        >
          {menuitems.map((item) => (
            <li>
              <a 
                href={item.href}
                class="block py-3 px-1 -mt-[20px] text-sm text-[#C084FC] hover:underline"
                data-close-menu="true"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </Astronav>
  </header>
</nav>

<!-- ✅ JS Toggle für Mobile Menu -->
<script is:inline>
  const menuIcon = document.getElementById('menu-icon');
  const openIcon = document.getElementById('open-icon');
  const closeIcon = document.getElementById('close-icon');
  const menuItems = document.getElementById('menu-items');
  const menuBg = document.getElementById('menu-bg');
  const closeMenuItems = document.querySelectorAll('[data-close-menu="true"]');

  menuIcon.addEventListener('click', () => {
    const isHidden = menuItems.classList.toggle('hidden');
    openIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');
    if (menuBg) {
      menuBg.classList.toggle('hidden', isHidden);
    }
  });

  closeMenuItems.forEach(item => {
    item.addEventListener('click', () => {
      menuItems.classList.add('hidden');
      openIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      if (menuBg) {
        menuBg.classList.add('hidden');
      }
    });
  });
</script>