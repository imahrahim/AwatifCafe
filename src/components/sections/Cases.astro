const besar = [
  { place: "Abdul", price: "20" },
  { place: "Aruwana", price: "30" },
  { place: "Bubbles", price: "30" },
  { place: "Cozy", price: "20" },
  { place: "Fauna", price: "30" },
  { place: "Flora", price: "30" },
  { place: "KK Beach", price: "25" },
  { place: "PIR", price: "15" },
  { place: "Suhaila", price: "20" },
  { place: "The Barat", price: "25" },
  { place: "The Reef", price: "15" },
