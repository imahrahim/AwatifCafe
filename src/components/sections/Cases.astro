---

<Section id="cases">
  <div class="mt-[140px] text-[#673606]">
    <SectionTitle
      sectionTitle="Water Taxi"
      description="Choose your destination and let us take you there â€“ price per person"
    />

    <div class="grid md:grid-cols-2 gap-0 w-full">
      <!-- Perhentian Kecil -->
      <div class="-mx-5 md:mx-0 bg-transparent">
        <Image
          src={kecilImage}
          alt="Perhentian Kecil"
          class="w-full h-full object-cover block rounded-none bg-transparent"
        />
      </div>
      <div>
        <Card title="Perhentian Kecil" subtitle="Small Island" destinations={kecil} />
      </div>

      <!-- Perhentian Besar -->
      <div class="-mx-5 md:mx-0 bg-transparent">
        <Image
          src={besarImage}
          alt="Perhentian Besar"
          class="w-full h-full object-cover block rounded-none bg-transparent"
        />
      </div>
      <div>
        <Card title="Perhentian Besar" subtitle="Big Island" destinations={besar} />
