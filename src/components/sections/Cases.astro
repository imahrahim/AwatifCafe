// Daten definieren
const kecil = [
  { place: "Corel Bay", price: "30" },
  { place: "Fisherman Village", price: "15" },
  { place: "Lagoon", price: "15" },
  { place: "Mira", price: "25" },
  { place: "Petani", price: "25" },
  { place: "Quite Beach", price: "25" },
  { place: "Romantic Beach", price: "25" },
  { place: "Wind Mills", price: "10" },
